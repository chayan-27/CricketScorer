<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#009688"
    android:id="@+id/homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:orientation="vertical">

        <EditText
            android:id="@+id/runs"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/editlay1"
            android:fontFamily="@font/shojumaru"
            android:hint="@string/runs"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:padding="4dp"
            android:textSize="30sp"

            android:textAlignment="center"
            android:textColorHint="#8A3A7E10"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/balls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColorHint="#6D15279A"
            android:textColor="#15279A"
            android:padding="4dp"
            android:textSize="30sp"
            android:fontFamily="@font/shojumaru"
            android:textStyle="bold"
            android:background="@drawable/editlay1"
            android:hint="@string/balls"
            android:inputType="number"
            android:layout_marginBottom="16dp"/>
        <Button
            android:id="@+id/cal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/shojumaru"
            android:textColor="#F1C078"
            android:textStyle="bold"
            android:background="@drawable/buttonlay"
            android:onClick="calculate"
            android:text="@string/CAL"/>
    </LinearLayout>

</FrameLayout>